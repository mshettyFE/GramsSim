      <fraction n="0.53" ref="fibrous_glass"/>
    </material>
    <material formula="STEEL_STAINLESS_Fe7Cr2Ni" name="STEEL_STAINLESS_Fe7Cr2Ni">
      <D unit="g/cm3" value="7.9300"/>
      <fraction n="0.0010" ref="carbon"/>
      <fraction n="0.1792" ref="chromium"/>
      <fraction n="0.7298" ref="iron"/>
      <fraction n="0.0900" ref="nickel"/>
    </material>
    <!-- 07-Jul-2020 WGS:
	 Additional LAr optical properties from 
	 https://cdcvs.fnal.gov/redmine/projects/larg4/wiki 
    -->
    <material name="LAr" formula="LAr">
      <property name="RINDEX" ref="ArINDEX"/>
      <property name="SLOWCOMPONENT" ref="SCINT"/>
      <property name="SCINTILLATIONYIELD" ref="SY" />
      <property name="RESOLUTIONSCALE" ref="RS" />
      <property name="SLOWTIMECONSTANT" ref="STC" />
      <property name="YIELDRATIO" ref="YR" />
      <D value="1.40" unit="g/cm3"/>
      <fraction n="1.0000" ref="argon"/>
    </material>
    <material formula=" " name="Air">
      <D unit="g/cm3" value="0.001205"/>
      <fraction n="0.781154" ref="nitrogen"/>
      <fraction n="0.209476" ref="oxygen"/>
      <fraction n="0.00937" ref="argon"/>
    </material>
    <material formula=" " name="G10">
      <D unit="g/cm3" value="1.7"/>
      <fraction n="0.2805" ref="silicon"/>
      <fraction n="0.3954" ref="oxygen"/>
      <fraction n="0.2990" ref="carbon"/>
      <fraction n="0.0251" ref="hydrogen"/>
    </material>
    <material formula="H2O" name="Water">
      <D unit="g/cm3" value="1.0"/>
      <fraction n="0.1119" ref="hydrogen"/>
      <fraction n="0.8881" ref="oxygen"/>
    </material>
    <material formula="Ti" name="Titanium">
      <D unit="g/cm3" value="4.506"/>
      <fraction n="1." ref="titanium"/>
    </material>
    <material formula="TPB" name="TPB">
      <D unit="g/cm3" value="1.40"/>
      <fraction n="1.0000" ref="argon"/>
    </material>
    <material name="Glass">
      <D unit="g/cm3" value="2.74351"/>
      <fraction n="0.600" ref="SiO2"/>
      <fraction n="0.118" ref="Al2O3"/>
      <fraction n="0.001" ref="Fe2O3"/>
      <fraction n="0.224" ref="CaO"/>
      <fraction n="0.034" ref="MgO"/>
      <fraction n="0.010" ref="Na2O"/>
      <fraction n="0.013" ref="TiO2"/>
    </material>
    <material name="Acrylic">
      <D unit="g/cm3" value="1.19"/>
      <fraction n="0.600" ref="carbon"/>
      <fraction n="0.320" ref="oxygen"/>
      <fraction n="0.080" ref="hydrogen"/>
    </material>
    <material name="Polystyrene">
      <D unit="g/cm3" value="1.06"/>
      <fraction n="0.077418" ref="hydrogen"/>
      <fraction n="0.922582" ref="carbon"/>
    </material>
    <material formula="Ar" name="Argon_gas_87K">
      <D unit="g/cm3" value="0.0056"/>
      <!-- standard pressure, 87.3K -->
      <fraction n="1.0000" ref="argon"/>
    </material>

    <!-- 8-May-2020 WGS: PTFE is a polymer chain. Its formula is (C2F4)n.
    Maybe the following is correct. -->
    <element Z="9" formula="F" name="flourine">
      <atom value="18.998403"/>
    </element>
    <material name="PTFE">
        <D unit="g/cm3" value="2.2"/>
        <composite n="2" ref="carbon"/>
        <composite n="4" ref="flourine"/>
    </material>

  </materials>

  <solids>
  
    <!-- The constants and quantities used in this section are defined in the <define></define> 
    section above. -->
    <box lunit="cm" name="TPC" x="lArTPCXSize" y="lArTPCYSize" z="lArTPCZSize" />

    <tube aunit="deg" deltaphi="360" lunit="cm" name="TPCXWire" rmax="wireRadius" z="lengthXWire" />
    <tube aunit="deg" deltaphi="360" lunit="cm" name="TPCYWire" rmax="wireRadius" z="lengthYWire" />

    <box lunit="cm" name="CathodePlate" x="cathodeXSize" y="cathodeYSize" z="cathodeZSize" />
    <box lunit="cm" name="TPCWirePlane" x="wirePlaneXSize" y="wirePlaneYSize" z="wirePlaneZSize" />
    <box lunit="cm" name="PTFESheet" x="ptfeXSize" y="ptfeYSize" z="ptfeZSize" />
    <box lunit="cm" name="ActiveRegion" x="activeRegionXSize" y="activeRegionYSize" z="activeRegionZSize" />
    <box lunit="cm" name="SIPM" x="sipmXSize" y="sipmYSize" z="sipmZSize" />
  
    <box lunit="cm" name="World" x="worldVolumeXSize" y="worldVolumeYSize" z="worldVolumeZSize"/>
    <box lunit="cm" name="OuterDetector" x="outerVolumeXSize" y="outerVolumeYSize" z="outerVolumeZSize"/>
    
    <box lunit="cm" name="OuterZwallXstrip" x="lengthOuterZwallXstrips" y="scintillatorWidth" z="scintillatorThickness"/>
    <box lunit="cm" name="OuterZwallYstrip" x="scintillatorWidth" y="lengthOuterZwallYstrips" z="scintillatorThickness"/>
 
    <box lunit="cm" name="OuterYwallXstrip" x="lengthOuterYwallXstrips" y="scintillatorThickness" z="scintillatorWidth"/>
    <box lunit="cm" name="OuterYwallZstrip" x="scintillatorWidth" y="scintillatorThickness" z="lengthOuterYwallZstrips"/>
  
    <box lunit="cm" name="OuterXwallZstrip" x="scintillatorThickness" y="scintillatorWidth" z="lengthOuterXwallZstrips"/>
    <box lunit="cm" name="OuterXwallYstrip" x="scintillatorThickness" y="lengthOuterXwallYstrips" z="scintillatorWidth"/>

    <box lunit="cm" name="OuterXwall" x="outerXwallXSize" y="outerXwallYSize" z="outerXwallZSize"/>
    <box lunit="cm" name="OuterYwall" x="outerYwallXSize" y="outerYwallYSize" z="outerYwallZSize"/>
    <box lunit="cm" name="OuterZwall" x="outerZwallXSize" y="outerZwallYSize" z="outerZwallZSize"/>
    
    <box lunit="cm" name="InnerDetector" x="innerVolumeXSize" y="innerVolumeYSize" z="innerVolumeZSize"/>
    
    <box lunit="cm" name="InnerZwallXstrip" x="lengthInnerZwallXstrips" y="scintillatorWidth" z="scintillatorThickness"/>
    <box lunit="cm" name="InnerZwallYstrip" x="scintillatorWidth" y="lengthInnerZwallYstrips" z="scintillatorThickness"/>
 
    <box lunit="cm" name="InnerYwallXstrip" x="lengthInnerYwallXstrips" y="scintillatorThickness" z="scintillatorWidth"/>
    <box lunit="cm" name="InnerYwallZstrip" x="scintillatorWidth" y="scintillatorThickness" z="lengthInnerYwallZstrips"/>
  
    <box lunit="cm" name="InnerXwallZstrip" x="scintillatorThickness" y="scintillatorWidth" z="lengthInnerXwallZstrips"/>
    <box lunit="cm" name="InnerXwallYstrip" x="scintillatorThickness" y="lengthInnerXwallYstrips" z="scintillatorWidth"/>

    <box lunit="cm" name="InnerXwall" x="InnerXwallXSize" y="InnerXwallYSize" z="InnerXwallZSize"/>
    <box lunit="cm" name="InnerYwall" x="InnerYwallXSize" y="InnerYwallYSize" z="InnerYwallZSize"/>
    <box lunit="cm" name="InnerZwall" x="InnerZwallXSize" y="InnerZwallYSize" z="InnerZwallZSize"/>

    <box lunit="cm" name="Cryostat" x="cryostatXSize" y="cryostatYSize" z="cryostatZSize" />

  </solids>

  <!-- 13-May-2020 WGS: The following tag will associate a Geant4 sensitive detector named
  "LArSD" (for example) to a given volume. Note that this does not create the code for "LArSD" 
  out of nowhere (don't get confused with options.xml!); you have to write the code for any
  sensitive detectors and definie them to Geant4's SDManager.
  
  <auxiliary auxtype="SensDet" auxvalue="LArSD" />
  -->

  <!-- 29-Jun-2020 WGS: The following tag will assign a maximum step size
  for a given volume. This will override Geant4's normal mechanism for determining
  step size. Note that there may be an option in the XML options file that
  will override this value. Units are G4's default (mm). Also note that for this
  to have any effect, STEPLIMIT has to be turned on in the physics list
  (see the options XML file).
  
  <auxiliary auxtype="StepLimit" auxvalue="0.02" />
  -->

  <!-- 13-May-2020 WGS: For the sake of G4 visualization, a volume can optionally be set
  to a specific color. (If you're from England, you can also set a volume's visibility to 
  a specific colour.) Colors and visibility are set on the volume level. The tag's structure is:
  
  <auxiliary auxtype="Color" auxvalue="G4Color" />
  
  where G4Color is from the set (white, gray, black, brown, red, green, blue, cyan, magenta, yellow, none) 
  
  If you use "none" the volume will be invisible. If you don't include this tag for a volume, 
  then it will have the default color of white. 
  -->
  
  <structure>
  
    <!-- 6-May-2020 WGS: Note that the materials used below are mostly the MicroBooNE definitions.
    They may not apply to GRAMS. -->
  
    <volume name="volTPCXWire">
      <materialref ref="Titanium"/>
      <solidref ref="TPCXWire"/>
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>
     <volume name="volTPCYWire">
      <materialref ref="Titanium"/>
      <solidref ref="TPCYWire"/>
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <!-- 6-May-2020 WGS: Use loops to place the wires within the planes. -->
 
    <volume name="volTPCXPlane">
      <materialref ref="LAr"/>
      <solidref ref="TPCWirePlane"/>
      <loop for="xWireLoopIndex" to="numberXWires - 1" step="1">
        <physvol>
            <volumeref ref="volTPCXWire"/>
            <position name="posXwire" unit="cm" x="0" y="(-((numberXWires - 1) / 2) + xWireLoopIndex)*wireSpacing" z="0"/>
            <rotationref ref="rPlus90AboutY"/>
        </physvol>
     </loop>
     <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volTPCYPlane">
      <materialref ref="LAr"/>
      <solidref ref="TPCWirePlane"/>
      <loop for="yWireLoopIndex" to="numberYWires - 1" step="1">
        <physvol>
            <volumeref ref="volTPCYWire"/>
            <position name="posYwire" unit="cm" x="(-((numberYWires - 1) / 2) + yWireLoopIndex)*wireSpacing" y="0" z="0"/>
            <rotationref ref="rPlus90AboutX"/>
        </physvol>
     </loop>
     <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volTPCActive">
      <materialref ref="LAr"/>
      <solidref ref="ActiveRegion"/>
      <auxiliary auxtype="SensDet" auxvalue="LArSensitiveDetector" />
      <auxiliary auxtype="StepLimit" auxvalue="0.02"/>
      <auxiliary auxtype="Color" auxvalue="red" />
    </volume>

    <volume name="volPTFESheet">
      <materialref ref="PTFE"/>
      <solidref ref="PTFESheet"/>
      <auxiliary auxtype="Color" auxvalue="yellow" />
    </volume>

    <!-- 8-May-2020 WGS: As a first approximation, let's assume that
    SIPMs are pure silicon. Question this assumption! -->
    <volume name="volSIPM">
      <materialref ref="SILICON_Si"/>
      <solidref ref="SIPM"/>
      <auxiliary auxtype="Color" auxvalue="gray" />
    </volume>

    <volume name="volCathodePlate">
      <materialref ref="STEEL_STAINLESS_Fe7Cr2Ni"/>
      <solidref ref="CathodePlate"/>
      <auxiliary auxtype="Color" auxvalue="red" />
    </volume>

    <!-- LArTPC definition -->
    <volume name="volTPC">
      <materialref ref="LAr"/>
      <solidref ref="TPC"/>
      
      <!-- 8-May-2020 WGS: Where will the cathode plate be? I don't know. Make a guess. -->
      <physvol>
        <volumeref ref="volCathodePlate"/>
        <position name="posCathod" unit="cm" x="0" y="0" z="-(lArTPCZSize/2) + 2*cathodeThickness" />
      </physvol>
      
      <!-- 8-May-2020 WGS: Where will the wire planes be? I don't know. Make a guess. -->
      <physvol>
        <volumeref ref="volTPCXPlane"/>
        <position name="posXplane" unit="cm" x="0" y="0" z="(lArTPCZSize/2) - (wirePlaneThickness/2)" />
      </physvol>
      <physvol>
        <volumeref ref="volTPCYPlane"/>
        <position name="posYplane" unit="cm" x="0" y="0" z="(lArTPCZSize/2) - (wirePlaneThickness*3/2)"/>
      </physvol>

      <!-- 8-May-2020 WGS: For each active region, we have to place a volume representing that
      region, the PTFE sheet that separates the regions, and a SIPM. -->
      <loop for="ptfeIndex" to="numberPtfeSheets - 1" step="1">
        <physvol>
            <volumeref ref="volPTFESheet"/>
            <position name="posPTFESheet" unit="cm" x="0" y="-(lArTPCYSize/2) + activeRegionYSize + ptfeYSize/2 + ptfeIndex*(activeRegionYSize + ptfeYSize)" z="0"/>
        </physvol>
      </loop>
      
      <loop for="activeRegionIndex" to="numberActiveRegions - 1" step="1">
        <physvol>
            <volumeref ref="volTPCActive"/>
            <position name="posTPCActive" unit="cm" x="0" y="-(lArTPCYSize/2) + activeRegionYSize/2 + activeRegionIndex*(activeRegionYSize + ptfeYSize)" z="0"/>
        </physvol>
        <!-- 8-May-2020 WGS: Where are the SIPMs? How will they be mounted? I don't know.
        For now, let them magically float 2cm above the bottom of the TPC, outside the
        active TPC region. -->
        <physvol>
            <volumeref ref="volSIPM"/>
            <position name="posSIPM" unit="cm" x="0" y="-(lArTPCYSize/2) + activeRegionYSize/2 + activeRegionIndex*(activeRegionYSize + ptfeYSize)" z="-(lArTPCZSize/2) + 2"/>
        </physvol>
      </loop>

      <auxiliary auxtype="Color" auxvalue="magenta" />
    </volume>
    <!-- End of LArTPC definition -->
    
    <!-- Inner detector definition -->

    <volume name="volCryostat">
      <materialref ref="STEEL_STAINLESS_Fe7Cr2Ni"/>
      <solidref ref="Cryostat"/>
      <physvol>
        <volumeref ref="volTPC" />
        <positionref ref="posCenter" />
      </physvol>     
      <auxiliary auxtype="Color" auxvalue="gray" />      
    </volume>

    <!-- 8-May-2020 WGS: Is "polystyrene" (used in MicroBoone) a reasonable description of scintillator? -->

    <volume name="volInnerZwallXstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="InnerZwallXstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volInnerZwallYstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="InnerZwallYstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volInnerYwallXstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="InnerYwallXstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volInnerYwallZstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="InnerYwallZstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volInnerXwallZstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="InnerXwallZstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volInnerXwallYstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="InnerXwallYstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>
    
    <!-- 8-May-2020 WGS: In the same way we placed x and y wires in their volumes, place the scintillator 
    strips in the x, y, and z detector walls. -->
    
    <volume name="volInnerZwall">
      <materialref ref="Air"/>
      <solidref ref="InnerZwall"/>
      <loop for="indexInnerZwallXstrips" to="numberInnerZwallXstrips - 1" step="1">
        <physvol>
            <volumeref ref="volInnerZwallXstrip"/>
            <position name="posInnerZwallXstrip" unit="cm" x="0" y="-InnerZwallYSize/2 + scintillatorWidth/2 + indexInnerZwallXstrips*scintillatorWidth" z="scintillatorThickness/2"/>
        </physvol>
      </loop>
      <loop for="indexInnerZwallYstrips" to="numberInnerZwallYstrips - 1" step="1">
        <physvol>
            <volumeref ref="volInnerZwallYstrip"/>
            <position name="posInnerZwallYstrip" unit="cm" x="-InnerZwallXSize/2 + scintillatorWidth/2 + indexInnerZwallYstrips*scintillatorWidth" y="0" z="-scintillatorThickness/2"/>
        </physvol>
      </loop>
      <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>
        
    <volume name="volInnerYwall">
      <materialref ref="Air"/>
      <solidref ref="InnerYwall"/>
      <loop for="indexInnerYwallXstrips" to="numberInnerYwallXstrips - 1" step="1">
        <physvol>
            <volumeref ref="volInnerYwallXstrip"/>
            <position name="posInnerYwallXstrip" unit="cm" x="0" y="scintillatorThickness/2" z="-InnerYwallZSize/2 + scintillatorWidth/2 + indexInnerYwallXstrips*scintillatorWidth"/>
        </physvol>
      </loop>
      <loop for="indexInnerYwallZstrips" to="numberInnerYwallZstrips - 1" step="1">
        <physvol>
            <volumeref ref="volInnerYwallZstrip"/>
            <position name="posInnerYwallZstrip" unit="cm" x="-InnerYwallXSize/2 + scintillatorWidth/2 + indexInnerYwallZstrips*scintillatorWidth" y="-scintillatorThickness/2" z="0"/>
        </physvol>
     </loop>
      <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>
         
    <volume name="volInnerXwall">
      <materialref ref="Air"/>
      <solidref ref="InnerXwall"/>
      <loop for="indexInnerXwallZstrips" to="numberInnerXwallZstrips - 1" step="1">
        <physvol>
            <volumeref ref="volInnerXwallZstrip"/>
            <position name="posInnerXwallZstrip" unit="cm" x="scintillatorThickness/2" y="-InnerXwallYSize/2 + scintillatorWidth/2 + indexInnerXwallZstrips*scintillatorWidth" z="0"/>
        </physvol>
      </loop>
      <loop for="indexInnerXwallYstrips" to="numberInnerXwallYstrips - 1" step="1">
        <physvol>
            <volumeref ref="volInnerXwallYstrip"/>
            <position name="posInnerXwallYstrip" unit="cm" x="-scintillatorThickness/2" y="0" z="-InnerXwallZSize/2 + scintillatorWidth/2 + indexInnerXwallYstrips*scintillatorWidth"/>
        </physvol>
     </loop>
      <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>

    <volume name="volInnerDetector">
      <materialref ref="Air"/>
      <solidref ref="InnerDetector"/>
      
      <!-- 10-May-2020 WGS: Place the positive-axis walls in the detector. -->
      <physvol>
        <volumeref ref="volInnerZwall" />
        <position name="posInnerZwall" unit="cm" x="0" y="0" z="(innerVolumeZSize - InnerZwallZSize)/2" />
      </physvol>
      <physvol>
        <volumeref ref="volInnerYwall" />
        <position name="posInnerYwall" unit="cm" x="0" y="(innerVolumeYSize - InnerYwallYSize)/2" z="0" />
      </physvol>
      <physvol>
        <volumeref ref="volInnerXwall" />
        <position name="posInnerXwall" unit="cm" x="(innerVolumeXSize - InnerXwallXSize)/2" y="0" z="0" />
      </physvol>
      
      <!-- 10-May-2020 WGS: Place the negative-axis walls in the detector, rotating each wall by 180 degrees. -->
      <physvol>
        <volumeref ref="volInnerZwall" />
        <position name="posInnerZwallm" unit="cm" x="0" y="0" z="-(innerVolumeZSize - InnerZwallZSize)/2" />
        <rotationref ref="rPlus180AboutZ" />
      </physvol>
      <physvol>
        <volumeref ref="volInnerYwall" />
        <position name="posInnerYwallm" unit="cm" x="0" y="-(innerVolumeYSize - InnerYwallYSize)/2" z="0" />
       <rotationref ref="rPlus180AboutY" />
      </physvol>
      <physvol>
        <volumeref ref="volInnerXwall" />
        <position name="posInnerXwallm" unit="cm" x="-(innerVolumeXSize - InnerXwallXSize)/2" y="0" z="0" />
        <rotationref ref="rPlus180AboutX" />
      </physvol>

      <!-- 10-May-2020 WGS: The cryostat -->
      <physvol>
        <volumeref ref="volCryostat" />
        <positionref ref="posCenter" />
      </physvol>

      <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>
    <!-- End of Inner detector definition -->
    

    <!-- Outer detector definition -->

    <!-- 8-May-2020 WGS: Is "polystyrene" (used in MicroBoone) a reasonable description of scintillator? -->

    <volume name="volOuterZwallXstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="OuterZwallXstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volOuterZwallYstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="OuterZwallYstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volOuterYwallXstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="OuterYwallXstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volOuterYwallZstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="OuterYwallZstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volOuterXwallZstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="OuterXwallZstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>

    <volume name="volOuterXwallYstrip">
      <materialref ref="Polystyrene"/>
      <solidref ref="OuterXwallYstrip"/>
      <auxiliary auxtype="SensDet" auxvalue="ScintillatorSD" />
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>
    
    <!-- 8-May-2020 WGS: In the same way we placed x and y wires in their volumes, place the scintillator 
    strips in the x, y, and z detector walls. -->
    
    <volume name="volOuterZwall">
      <materialref ref="Air"/>
      <solidref ref="OuterZwall"/>
      <loop for="indexOuterZwallXstrips" to="numberOuterZwallXstrips - 1" step="1">
        <physvol>
            <volumeref ref="volOuterZwallXstrip"/>
            <position name="posOuterZwallXstrip" unit="cm" x="0" y="-outerZwallYSize/2 + scintillatorWidth/2 + indexOuterZwallXstrips*scintillatorWidth" z="scintillatorThickness/2"/>
        </physvol>
      </loop>
      <loop for="indexOuterZwallYstrips" to="numberOuterZwallYstrips - 1" step="1">
        <physvol>
            <volumeref ref="volOuterZwallYstrip"/>
            <position name="posOuterZwallYstrip" unit="cm" x="-outerZwallXSize/2 + scintillatorWidth/2 + indexOuterZwallYstrips*scintillatorWidth" y="0" z="-scintillatorThickness/2"/>
        </physvol>
      </loop>
      <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>
        
    <volume name="volOuterYwall">
      <materialref ref="Air"/>
      <solidref ref="OuterYwall"/>
      <loop for="indexOuterYwallXstrips" to="numberOuterYwallXstrips - 1" step="1">
        <physvol>
            <volumeref ref="volOuterYwallXstrip"/>
            <position name="posOuterYwallXstrip" unit="cm" x="0" y="scintillatorThickness/2" z="-outerYwallZSize/2 + scintillatorWidth/2 + indexOuterYwallXstrips*scintillatorWidth"/>
        </physvol>
      </loop>
      <loop for="indexOuterYwallZstrips" to="numberOuterYwallZstrips - 1" step="1">
        <physvol>
            <volumeref ref="volOuterYwallZstrip"/>
            <position name="posOuterYwallZstrip" unit="cm" x="-outerYwallXSize/2 + scintillatorWidth/2 + indexOuterYwallZstrips*scintillatorWidth" y="-scintillatorThickness/2" z="0"/>
        </physvol>
     </loop>
     <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>
         
    <volume name="volOuterXwall">
      <materialref ref="Air"/>
      <solidref ref="OuterXwall"/>
      <loop for="indexOuterXwallZstrips" to="numberOuterXwallZstrips - 1" step="1">
        <physvol>
            <volumeref ref="volOuterXwallZstrip"/>
            <position name="posOuterXwallZstrip" unit="cm" x="scintillatorThickness/2" y="-outerXwallYSize/2 + scintillatorWidth/2 + indexOuterXwallZstrips*scintillatorWidth" z="0"/>
        </physvol>
      </loop>
      <loop for="indexOuterXwallYstrips" to="numberOuterXwallYstrips - 1" step="1">
        <physvol>
            <volumeref ref="volOuterXwallYstrip"/>
            <position name="posOuterXwallYstrip" unit="cm" x="-scintillatorThickness/2" y="0" z="-outerXwallZSize/2 + scintillatorWidth/2 + indexOuterXwallYstrips*scintillatorWidth"/>
        </physvol>
     </loop>
     <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>

    <volume name="volOuterDetector">
      <materialref ref="Air"/>
      <solidref ref="OuterDetector"/>
      
      <!-- 10-May-2020 WGS: Place the positive-axis walls in the detector. -->
      <physvol>
        <volumeref ref="volOuterZwall" />
        <position name="posOuterZwall" unit="cm" x="0" y="0" z="(outerVolumeZSize - outerZwallZSize)/2" />
      </physvol>
      <physvol>
        <volumeref ref="volOuterYwall" />
        <position name="posOuterYwall" unit="cm" x="0" y="(outerVolumeYSize - outerYwallYSize)/2" z="0" />
      </physvol>
      <physvol>
        <volumeref ref="volOuterXwall" />
        <position name="posOuterXwall" unit="cm" x="(outerVolumeXSize - outerXwallXSize)/2" y="0" z="0" />
      </physvol>
      
      <!-- 10-May-2020 WGS: Place the negative-axis walls in the detector, rotating each wall by 180 degrees. -->
      <physvol>
        <volumeref ref="volOuterZwall" />
        <position name="posOuterZwallm" unit="cm" x="0" y="0" z="-(outerVolumeZSize - outerZwallZSize)/2" />
        <rotationref ref="rPlus180AboutZ" />
      </physvol>
      <physvol>
        <volumeref ref="volOuterYwall" />
        <position name="posOuterYwallm" unit="cm" x="0" y="-(outerVolumeYSize - outerYwallYSize)/2" z="0" />
       <rotationref ref="rPlus180AboutY" />
      </physvol>
      <physvol>
        <volumeref ref="volOuterXwall" />
        <position name="posOuterXwallm" unit="cm" x="-(outerVolumeXSize - outerXwallXSize)/2" y="0" z="0" />
        <rotationref ref="rPlus180AboutX" />
      </physvol>

       <!-- 10-May-2020 WGS: The place the inner detector -->
      <physvol>
        <volumeref ref="volInnerDetector" />
        <position name="posInnerDetector" unit="cm" x="0" y="0" z="innerDetectorOffsetInOuter"/>
      </physvol>     

      <auxiliary auxtype="Color" auxvalue="cyan" />
    </volume>
   <!-- End of Outer detector definition -->
   
    <volume name="volWorld">
      <materialref ref="Air"/>
      <solidref ref="World"/>
      <physvol>
        <volumeref ref="volOuterDetector"/>
        <position name="posOuterDetector" unit="cm" x="0" y="0" z="outerDetectorOffsetInWorld"/>
      </physvol>
      <auxiliary auxtype="Color" auxvalue="none" />
    </volume>
  </structure>
  
  <setup name="Default" version="1.0">
    <world ref="volWorld"/>
  </setup>
  
</gdml>
